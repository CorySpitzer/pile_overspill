<h2>Add New Answer:</h2>
<hr>
<div class='well'>
  <h4>Question:</h4> <p><%= @question.heading %></p>
</div>

<%=form_for [@user, @question, @answer] do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit "Add Answer" %>
<% end %>
<hr>
<%= link_to "Back to Question", user_question_path(@question.user_id, @question) %>
